                       Foreground="Snow"
                       Opacity="{Binding IsActive, 
                                         RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=UserControl},
                                         Converter={StaticResource uTitleBar_converter_bool2opacity}}"/>
        </StackPanel>

